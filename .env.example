# Environment Configuration for QA Scripts
# Copy this file to .env.local, .env.staging, or .env.production and fill in the values

# Base URLs
BASE_URL=http://localhost:3000
API_URL=http://localhost:3000/api

# Application specific URLs (customize for your projects)
APP_URL=http://localhost:3001
APP_API_URL=http://localhost:3001/api

ADMIN_URL=http://localhost:3002
ADMIN_API_URL=http://localhost:3002/api

DASHBOARD_URL=http://localhost:3003
DASHBOARD_API_URL=http://localhost:3003/api

# Test User Credentials
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpassword
TEST_USER_PHONE=0123456789

# Test Configuration
DEFAULT_TIMEOUT=10000
PAGE_LOAD_TIMEOUT=30000
REQUEST_TIMEOUT=10000
RESPONSE_TIMEOUT=10000

# Cypress Configuration
HEADLESS=true
BROWSER=chrome
VIEWPORT_WIDTH=1280
VIEWPORT_HEIGHT=720
VIDEO=false
SCREENSHOTS_ON_FAILURE=true

# Environment
ENV=local
DEBUG=false

# API Keys (if needed for testing)
# API_KEY=your_api_key_here
# SECRET_KEY=your_secret_key_here